<?xml version="1.0" encoding="utf-8"?><!-- item_feed.xml -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content"
            tools:text="content"
            android:textSize="15sp"/>

        <!--<GridView-->
            <!--android:id="@+id/gridView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="12dp"-->
            <!--android:layout_marginEnd="12dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:columnWidth="62dp"-->
            <!--android:gravity="center"-->
            <!--android:horizontalSpacing="8dp"-->
            <!--android:numColumns="3"-->
            <!--android:stretchMode="none"/>-->

        <me.zq.youjoin.widget.enter.AutoHeightGridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:columnWidth="100dp"
            android:gravity="center"
            android:numColumns="3"
            android:stretchMode="none"/>
        <!--<ImageView-->
            <!--android:id="@+id/ivFeedBottom"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_account_circle_white_48dp" />

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="@dimen/tweets_list_item_button_size"
                android:layout_height="@dimen/tweets_list_item_button_size"
                android:background="@drawable/ic_heart_outline_grey"/>
<!--android:background="@drawable/btn_feed_action"-->

            <TextSwitcher
                android:id="@+id/tsLikesCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center">
                <!--android:inAnimation="@anim/slide_in_likes_counter"
                                    android:outAnimation="@anim/slide_out_likes_counter"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like_count"
                    tools:text="123"
                    android:textColor="@color/grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey" />
            </TextSwitcher>

            <ImageButton
                android:id="@+id/btnComments"
                android:layout_width="@dimen/tweets_list_item_button_size"
                android:layout_height="@dimen/tweets_list_item_button_size"
                android:background="@drawable/ic_comment_outline_grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment_count"
                tools:text="123"
                android:textColor="@color/grey"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btnMore"
                android:layout_width="@dimen/tweets_list_item_button_size"
                android:layout_height="@dimen/tweets_list_item_button_size"
                android:background="@drawable/ic_more_grey" />

            <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="center_vertical|right">-->
                <!---->
            <!--</LinearLayout>-->
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>