                <!--android:layout_weight="1">-->

                <!--<ImageView-->
                    <!--android:id="@+id/popTopic"-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->
                    <!--android:background="@drawable/pop_topic" />-->

            <!--</LinearLayout>-->

            <!--<LinearLayout-->
