<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="20dp"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/navigation_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/ic_account_circle_white_48dp"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/navigation_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center"
            android:text="YouJoin"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/navigation_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="ksudzhan@vip.qq.com"
            android:textColor="@color/trans_white"
            android:layout_marginTop="5dp"/>
    </LinearLayout>




</LinearLayout>