<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/publish_btns"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <ImageButton
        android:layout_width="@dimen/publish_btns_size"
        android:layout_height="@dimen/publish_btns_size"
        android:id="@+id/btn_publish_photo"
        android:padding="4dp"
        android:background="@mipmap/ic_insert_photo_white_48dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

    <ImageButton
        android:layout_width="@dimen/publish_btns_size"
        android:layout_height="@dimen/publish_btns_size"
        android:id="@+id/btn_publish_emotion"
        android:padding="4dp"
        android:background="@mipmap/ic_insert_emoticon_white_48dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/btn_publish_photo"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:layout_width="@dimen/publish_btns_size"
        android:layout_height="@dimen/publish_btns_size"
        android:id="@+id/btn_publish_send"
        android:padding="4dp"
        android:background="@mipmap/ic_send_white_48dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>